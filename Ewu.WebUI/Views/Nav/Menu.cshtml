@model IEnumerable<string>

@*生成主页链接按钮*@
@Html.ActionLink(
        linkText: "Home",
        actionName: "List",
        controllerName: "Treasure",
        routeValues: null,
        htmlAttributes: new
        {
            @class = "btn btn-block btn-default btn-lg"
        }
    )
@*根据分类列表生成对应的链接按钮*@
@foreach(var link in Model)
{
    @Html.RouteLink(
        linkText: link,
        routeValues: new
        {
            controller = "Treasure",
            action = "List",
            category = link,
            page = 1
        },
        htmlAttributes: new
        {
            //高亮当前分类
            @class = "btn btn-block btn-default btn-lg"
                   + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        }
    )
}
