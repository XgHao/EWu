@using Ewu.Domain.Db
@model IEnumerable<DeliveryAddress>

<div class="faq-title">
    <span class="lnr lnr-file-add"></span>
    <h4>@("我的收货地址(" + Model.Count() + ")")</h4>
</div>
<div class="faqs">
    <div class="panel-group accordion" role="tablist" id="accordion">
        @{
            int cnt = 0;
            foreach (var address in Model)
            {
                cnt++;
                <div class="panel accordion__single" id="panel-one">
                    <div class="single_acco_title">
                        <h4>
                            <a data-toggle="collapse" href=@("#collapse"+cnt) class="collapsed" aria-expanded="false" data-target=@("#collapse"+cnt) aria-controls=@("collapse"+cnt)>
                                <span>@address.MoreLocation</span>
                                <i class="lnr indicator lnr-chevron-down"></i>
                            </a>
                        </h4>
                    </div>

                    <div id=@("collapse"+cnt) class="panel-collapse collapse" aria-labelledby="panel-one" data-parent="#accordion" style="">
                        <div class="panel-body">
                            <div class="location_address">
                                <div class="addres_module">
                                    <div class="row">
                                        <div class="col-6">
                                            <p>
                                                <span class="fa fa-user-o"></span>&nbsp;@address.RealName
                                            </p>
                                        </div>
                                        <div class="col-6">
                                            <p>
                                                <span class="fa fa-phone"></span>&nbsp;@address.PhoneNum
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <p>
                                                <span class="fa fa-truck"></span>&nbsp;@(address.LocationProvince+" "+(address.LocationProvince==address.LocationCity?"":address.LocationCity)+" "+address.LocationDistrict+" "+address.MoreLocation)
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <button class="btn btn--icon btn-sm btn--bordered btn-success pull-right" onclick="SetDeliveryAddress(@("'"+address.DeliveryAddressUID+"'"))">
                                                <span class="fa fa-check"></span>选择
                                            </button>
                                            <button class="btn btn--icon btn-sm btn--bordered btn-danger pull-right" onclick="DeleteDeliveryAddress(@("'"+address.DeliveryAddressUID+"'"))">
                                                <span class="fa fa-close"></span>删除
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            }
        }


    </div>
</div>
