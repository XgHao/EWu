@using Ewu.WebUI.Models.ViewModel
@model TreasureAndHolderInfo

<div class="col-lg-4 col-md-6">
    <div class="product product--card">
        <!--图片缩略图-->
        <div class="product__thumbnail">
            <!--图片-->
            <img height="480" width="350" src=@Model.Treasure.Cover alt="Product Image">
            <!--悬浮按钮-->
            <div class="prod_btn">
                <a href=@Model.Treasure.Link class="transparent btn--sm btn--round">查看详情</a>
            </div>
        </div>

        <!--物品详情-->
        <div class="product-desc">
            <!--标题-->
            <a href=@Model.Treasure.Link class="product_title">
                <h4>@Model.Treasure.TreasureName</h4>
            </a>

            <!--所有者-->
            <ul class="titlebtm">
                <!--所有者-->
                <li>
                    <img class="auth-img" src=@Model.Holder.HeadPortrait alt="author image">
                    <p>
                        <a href="#">@Model.Holder.UserName</a>
                    </p>
                </li>
                <!--物品分类-->
                <li class="product_cat">
                    <a href=@("/Treasure/List/"+Model.Treasure.TreasureType)>
                        <span class="lnr lnr-book"></span>@Model.Treasure.TreasureType
                    </a>
                </li>
            </ul>

            <!--介绍-->
            <p>
                @Model.Treasure.DetailContent
            </p>
        </div>

        <!--信息-->
        <div class="product-purchase">
            <!--时间-->
            <div class="price_love">
                <span>@Model.Treasure.UpdateTime.ToShortDateString()</span>
                <!--收藏数-->
                <a href="javascript:void(0);" onclick=@("AddFavorite('"+Model.Treasure.TreasureUID+"')")>
                    <span id=@("Favorite_"+Model.Treasure.TreasureUID) class="fa fa-heart-o text-danger">@Model.Treasure.Favorite</span>
                </a>
            </div>
            <!--浏览量-->
            <div class="sell">
                <p>
                    <span class="fa fa-eye"></span>
                    <span>@Model.Treasure.BrowseNum</span>
                </p>
            </div>
        </div>
    </div>
</div>
