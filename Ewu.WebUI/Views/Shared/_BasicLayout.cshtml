<!DOCTYPE html>

<html lang="zh-CN">

<head>
    @Html.Partial("cssJS/cssHead")
    <!--上传文件所需的样式-->
    <link href="~/Content/Dropzone/basic.min.css" rel="stylesheet" />
    <link href="~/Content/Dropzone/dropzone.min.css" rel="stylesheet" />
    <style type="text/css">
        .dz-max-files-reached {
            background-color: darkseagreen;
        }
        .dropzone { 
            border: 2px dashed #0087F7; 
            border-radius: 5px; 
            background: white; 
            height:217px;
        } 
    </style>
    <script src="~/Scripts/Dropzone/dropzone-amd-module.min.js"></script>
    <script src="~/Scripts/Dropzone/dropzone.min.js"></script>
    <script src="~/Scripts/Dropzone/InitDropzone.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body class="preload home1 mutlti-vendor">
    <div class="menu-area">
        <!--顶部栏-->
        <div class="top-menu-area">
            <div class="container">
                <div class="row">
                    <!--Logo-->
                    <div class="col-lg-3 col-md-3 col-6 v_middle">
                        <div class="logo">
                            <a href="index.html">
                                <img src="~/images/logo.png" alt="logo image" class="img-fluid">
                            </a>
                        </div>
                    </div>
                    <!--用户个人信息-->
                    @Html.Action("UserInfo", "Account");
                </div>
            </div>
        </div>
    </div>

    <!--导航-->
    @RenderSection("Nav")

    @RenderBody()

    <!--页尾底栏-->
    @Html.Partial("PartialLayout/Footer")


    <!--JS-->
    @Html.Partial("cssJS/jsBody")
    <!--上传文件所需的js-->
</body>
</html>
