@model IEnumerable<Ewu.Domain.Entities.Treasure>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Treasures</h3>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-left">ID</th>
                    <th>Name</th>
                    <th class="text-right">BrowseNum</th>
                    <th class="text-center">Actions</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="text-left">@item.TreasureUID</td>
                        <td>@Html.ActionLink(
                                linkText:item.TreasureName,
                                actionName:"Edit",
                                routeValues: new
                                {
                                    item.TreasureUID
                                }
                            )</td>
                        <td class="text-right">@item.BrowseNum</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("TreasureUID",item.TreasureUID)
                                <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink(
                linkText:"Add a new Treasure",
                actionName:"Create",
                routeValues:null,
                htmlAttributes: new
                {
                    @class = "btn btn-default"
                }
            )
        </div>
    </div>
</div>
