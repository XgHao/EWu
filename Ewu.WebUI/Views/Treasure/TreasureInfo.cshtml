@model Ewu.WebUI.Models.ViewModel.TreaInfo

@{
    ViewBag.Title = "TreasureInfo";
    Layout = "~/Views/Shared/_InfoLayout.cshtml";
}

<!--导航-->
@section Nav{
    <section class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb">
                        <ul>
                            <li>
                                <a href="index.html">主页</a>
                            </li>
                            <li>
                                <a href="dashboard.html">物品列表</a>
                            </li>
                            <li class="active">
                                <a href="#">物品详情</a>
                            </li>
                        </ul>
                    </div>
                    <h1 class="page-title"></h1>
                    <h1 class="page-title">@Model.treasureInfo.TreasureName</h1>
                </div>
            </div>
        </div>
    </section>
}

<section class="single-product-desc">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="item-preview item-preview2">
                    <div class="prev-slide">
                        <div class="content">
                            <div class="a-content">
                                <div class="carousel-content">
                                    <ul class="carousel">
                                        @foreach (var img in Model.DetailImgs)
                                        {
                                            <li><img src=@img></li>
                                        }
                                    </ul>
                                    <ul class="img-index"></ul>
                                    <div class="carousel-prev"><img src="~/images/test/left1.png"></div>
                                    <div class="carousel-next"><img src="~/images/test/right1.png"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item__preview-thumb">
                        <div class="item-action">
                            <div class="action-btns">
                                <a href="#" class="btn btn--round btn--lg btn--icon">
                                    <span class="fa fa-hand-paper"></span>发起交易
                                </a>
                                <a href="#" class="btn btn--round btn--lg btn--icon">
                                    <span class="fa fa-heart"></span>添加收藏
                                </a>
                            </div>
                        </div>

                        <div class="thread thread_review">
                            <ul class="media-list thread-list">
                                <li class="single-thread">
                                    <!--备注信息-->
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="#">
                                                <img class="media-object" width="70" height="70" src=@Model.HolderInfo.HeadPortrait alt="Commentator Avatar">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <div class="clearfix">
                                                <div class="pull-left">
                                                    <div class="media-heading">
                                                        <a href="author.html">
                                                            <h4 class="font-weight-bold">@Model.HolderInfo.UserName</h4>
                                                        </a>
                                                    </div>
                                                    <div class="rating product--rating">
                                                        <ul>
                                                            <li>
                                                                <span class="fa fa-star"></span>
                                                            </li>
                                                            <li>
                                                                <span class="fa fa-star"></span>
                                                            </li>
                                                            <li>
                                                                <span class="fa fa-star"></span>
                                                            </li>
                                                            <li>
                                                                <span class="fa fa-star"></span>
                                                            </li>
                                                            <li>
                                                                <span class="fa fa-star-half-o"></span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="text-black-50">
                                                <i class="font-weight-bold">备注</i>
                                                @(Model.treasureInfo.Remarks ?? "")
                                            </p>
                                        </div>
                                    </div>

                                    <div class="media depth-2 reply-comment" style="display: none;">
                                        <div class="media-left">
                                            <a href="#">
                                                <img class="media-object" src="images/m2.png" alt="Commentator Avatar">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <form action="#" class="comment-reply-form">
                                                <textarea class="bla" name="reply-comment" placeholder="Write your comment..."></textarea>
                                                <button class="btn btn--md btn--round">Post Comment</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                </div>
                <div class="item-info">
                    <!--具体信息-->
                    <div class="item-info">
                        <!--标签-->
                        <div class="item-navigation">
                            <ul class="nav nav-tabs">
                                <li>
                                    <a href="#product-comment" class="active" aria-controls="product-comment" role="tab" data-toggle="tab">大家的看法</a>
                                </li>
                                <li>
                                    <a href="#product-details" aria-controls="product-details" role="tab" data-toggle="tab">物品信息</a>
                                </li>
                            </ul>
                        </div>
                        <!--标签内容-->
                        <div class="tab-content">
                            <!--评论-->
                            <div class="fade show tab-pane product-tab active" id="product-comment">
                                <div class="thread">
                                    <ul class="media-list thread-list">
                                        <li class="single-thread">
                                            <div class="media">
                                                <!--头像-->
                                                <div class="media-left">
                                                    <a href="#">
                                                        <img class="media-object" src="~/images/m1.png" alt="Commentator Avatar">
                                                    </a>
                                                </div>
                                                <!--内容-->
                                                <div class="media-body">
                                                    <div>
                                                        <div class="media-heading">
                                                            <a href="author.html">
                                                                <h4>Themexylum</h4>
                                                            </a>
                                                            <span>9 Hours Ago</span>
                                                        </div>
                                                        <!--标签-->
                                                        <span class="comment-tag buyer">Purchased</span>
                                                        <a href="#" class="reply-link">Reply</a>
                                                    </div>
                                                    <p>
                                                        Nunc placerat mi id nisi interdum mollis. Praesent pharetra, justo ut
                                                        sceleris que the mattis, leo quam aliquet congue placerat mi id nisi
                                                        interdum mollis.
                                                    </p>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                    <!--页码-->
                                    <div class="pagination-area pagination-area2">
                                        <nav class="navigation pagination" role="navigation">
                                            <div class="nav-links">
                                                <a class="page-numbers current" href="#">1</a>
                                                <a class="page-numbers" href="#">2</a>
                                                <a class="page-numbers" href="#">3</a>
                                                <a class="next page-numbers" href="#">
                                                    <span class="lnr lnr-arrow-right"></span>
                                                </a>
                                            </div>
                                        </nav>
                                    </div>

                                    <!--评论-->
                                    <div class="comment-form-area">
                                        <h4>Leave a comment</h4>
                                        <div class="media comment-form">
                                            <div class="media-left">
                                                <a href="#">
                                                    <img class="media-object" src="~/images/m7.png" alt="Commentator Avatar">
                                                </a>
                                            </div>
                                            <div class="media-body">
                                                <form action="#" class="comment-reply-form">
                                                    <textarea name="reply-comment" placeholder="Write your comment..."></textarea>
                                                    <button class="btn btn--sm btn--round">Post Comment</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--详情信息-->
                            <div class="fade tab-pane product-tab" id="product-details">
                                <div class="tab-content-wrapper">
                                    <h1>Landing Page Details</h1>
                                    <p>
                                        Nunc placerat mi id nisi interdum mollis. Praesent pharetra, justo ut scelerisque the
                                        mattis, leo quam aliquet congue placerat mi id nisi interdum mollis. Praesent pharetra,
                                        justo ut scel erisque the mattis, leo quam aliquet congue justo ut scelerisque. Praesent
                                        pharetra, justo ut scelerisque the mattis, leo quam aliquet congue justo ut scelerisque.
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!--所有者信息-->
            <div class="col-lg-4">
                <aside class="sidebar sidebar--single-product">
                    <!--物品信息-->
                    <div class="sidebar-card card--product-infos">
                        <div class="card-title">
                            <h4>物品信息</h4>
                        </div>
                        <!--具体信息-->
                        <ul class="infos">
                            <li>
                                <p class="data-label font-weight-bold">物品全称</p>
                                <p class="info">@Model.treasureInfo.TreasureName</p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">物品类型</p>
                                <p class="info">
                                    <a href="#">@Model.treasureInfo.TreasureType</a>
                                </p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">物品成色</p>
                                <p class="info">@Model.treasureInfo.DamageDegree</p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">所在地区</p>
                                <p class="info">@(Model.treasureInfo.LocationProvince+" "+Model.treasureInfo.LocationCity+" "+Model.treasureInfo.LocationDistrict)</p>  
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">交易范围</p>
                                <p class="info">@Model.treasureInfo.TradeRange</p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">收藏数</p>
                                <p class="info">@Model.treasureInfo.Favorite</p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">浏览量</p>
                                <p class="info">@Model.treasureInfo.BrowseNum</p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">上传时间</p>
                                <p class="info">
                                    <button class="btn btn-success">@Model.treasureInfo.UploadTime</button>
                                </p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">信息更新时间</p>
                                <p class="info">
                                    <button class="btn btn-danger">@Model.treasureInfo.UpdateTime</button>
                                </p>
                            </li>
                            <li>
                                <p class="data-label font-weight-bold">编辑次数</p>
                                <p class="info">@Model.treasureInfo.EditCount</p>
                            </li>
                        </ul>
                    </div>

                    <!--所有者信息-->
                    <div class="author-card sidebar-card ">
                        <div class="card-title">
                            <h4 class="text-center">所有者个人信息</h4>
                        </div>
                        <!--头像-->
                        <div class="author-infos">
                            <div class="author_avatar">
                                <img width="100" height="100" src=@Model.HolderInfo.HeadPortrait alt="Presenting the broken author avatar :D">
                            </div>
                            <!--名称-->
                            <div class="author">
                                <h4>@Model.HolderInfo.UserName</h4>
                                <!--个人签名-->
                                <p>@(Model.HolderInfo.Signature ?? "")</p>
                            </div>
                            <!--社交信息-->
                            <div class="social">
                                <ul>
                                    <li>
                                        <a href="#" class="btn btn--sm btn--color1 btn--icon">
                                            @if (Model.HolderInfo.Gender.IndexOf("男") >= 0)
                                            {
                                                <span class="fa fa-mars"></span><text>男</text>
                                            }
                                            else if (Model.HolderInfo.Gender.IndexOf("女") >= 0)
                                            {
                                                <span class="fa fa-venus"></span><text>女</text>
                                            }
                                            else
                                            {
                                                <span class="fa fa-genderless"></span><text>未知</text>
                                            }
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="btn btn--sm btn--color2 btn--icon">
                                            <span class="fa fa-birthday-cake"></span>@Model.HolderInfo.BirthDay.ToShortDateString()
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="btn btn--sm btn--color3 btn--icon">
                                            <span class="fa fa-qq"></span>@(Model.HolderInfo.OICQ ?? "未知")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="btn btn--sm btn--color4 btn--icon">
                                            <span class="fa fa-wechat"></span>@(Model.HolderInfo.WeChat ?? "未知")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="btn btn--sm btn--color5 btn--icon">
                                            <span class="fa fa-briefcase"></span>@(Model.HolderInfo.Job ?? "未知")
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!--动作-->
                            <div class="author-btn">
                                <a href="#" class="btn btn--sm btn--round btn--icon">
                                    <span class="fa fa-paper-plane-o"></span>留言
                                </a>
                            </div>
                        </div>
                    </div>
                    <!--信息卡片-->
                    <div class="sidebar-card card--metadata">
                        <div class="card-title">
                            <h4 class="text-center">用户记录</h4>
                        </div>
                        <ul class="data">
                            <li>
                                <p>
                                    <span class="lnr lnr-cart pcolor"></span>发布物品总数
                                </p>
                                <span>426</span>
                            </li>
                            <li>
                                <p>
                                    <span class="lnr lnr-heart scolor"></span>总收藏数
                                </p>
                                <span>240</span>
                            </li>
                            <li>
                                <p>
                                    <span class="lnr lnr-bubble mcolor3"></span>完成交易数
                                </p>
                                <span>35</span>
                            </li>
                        </ul>
                        <!--星级-->
                        <div class="rating product--rating">
                            <ul>
                                <li>
                                    <span class="fa fa-star"></span>
                                </li>
                                <li>
                                    <span class="fa fa-star"></span>
                                </li>
                                <li>
                                    <span class="fa fa-star"></span>
                                </li>
                                <li>
                                    <span class="fa fa-star"></span>
                                </li>
                                <li>
                                    <span class="fa fa-star-half-o"></span>
                                </li>
                            </ul>
                            <span class="rating__count">( 26 Ratings )</span>
                        </div>
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>