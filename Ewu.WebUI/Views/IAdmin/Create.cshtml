<!--注册页面-->
@section signup{
    <section class="signup_area section--padding2">
        <div class="container">
            @using (Html.BeginForm("Create", "IAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <!--1.输入用户信息-->
                    <div class="col-lg-6 offset-lg-0">
                        <div class="cardify signup_form">
                            <!--标题-->
                            <div class="login--header">
                                <h3>一、创建你的帐号信息</h3>
                                <p>
                                    请在下面的表格中填写相应的帐号信息
                                </p>
                            </div>
                            <div class="login--form">
                                <div class="form-group">
                                    <span class="lnr lnr-user"></span>
                                    <label for="urname">用户名</label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "text_field", @placeholder = "请输入你的用户名，作为你的社交" })
                                </div>
                                <div class="form-group">
                                    <span class="lnr lnr-lock"></span>
                                    <label for="urpassword">登录密码</label>
                                    @Html.PasswordFor(x => x.Password, new { @class = "text_field", @placeholder = "请输入你的密码" })
                                </div>
                                <div class="form-group">
                                    <span class="lnr lnr-lock"></span>
                                    <label for="urname">确认密码</label>
                                    @Html.PasswordFor(x => x.Password, new { @class = "text_field", @placeholder = "请再输入一次密码" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="cardify signup_form">
                            <!--标题-->
                            <div class="login--header">
                                <h3>二、上传你的正面身份证照</h3>
                                <p>
                                    请上传你的身份证正面照(人物面非国徽面)，系统会获取你的个人信息
                                </p>
                            </div>
                            <div class="login--form">
                                @*图像上传*@
                                <div class="form-group">
                                    <div style="position:relative;">
                                        <label>Image</label>
                                        <a class="btn" href="javascript:;">
                                            Choose File...
                                            <input type="file" name="idcardImg" size="40"
                                                   style="position:absolute; z-index:2;top:0;
                                left:0;filter: alpha(opacity=0); opacity:0;
                                background-color:transparent; color:transparent;"
                                                   onchange='$("#upload-file-info").html($(this).val());' />
                                        </a>
                                        <span class="label label-info" id="upload-file-info"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>身份证号码</label>
                                    @Html.TextBoxFor(x => x.IDCardNO, new { @class = "text_field", @placeholder = "请上传身份证正面照", @readonly = "true" })
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-6">
                                            <label>出生日期</label>
                                            @Html.TextBoxFor(x => x.BirthDay, new { @class="text_field", @placeholder = "请上传身份证正面照", @readonly = "true"})
                                        </div>
                                        <div class="col-6">
                                            <label>年龄</label>
                                            @Html.TextBoxFor(x=>x.Age, new { @class="text_field", @placeholder = "请上传身份证正面照", @readonly = "true"})
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn--fullwidth btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>
}

