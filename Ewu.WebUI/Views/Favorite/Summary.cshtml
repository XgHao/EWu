@model Ewu.Domain.Entities.Favorite

@*顶部右边checkout按钮*@
<div class="navbar-right">
    @Html.ActionLink(
        linkText: "Checkout",
        actionName: "Index",
        controllerName: "Favorite",
        routeValues: new
        {
            returnUrl = Request.Url.PathAndQuery
        },
        htmlAttributes: new
        {
            @class = "btn btn-dafault navbar-btn"
        }
    )
</div>

@*收藏页的概况*@
<div class="navbar-text navbar-right">
    <b>Your Favorite:</b>
    @Model.Lines.Sum(x=>x.Quantity)item(s),
    @Model.ComputeTotalValue()
</div>
