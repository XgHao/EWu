@using Ewu.WebUI.Models.ViewModel
@model UserHeadInfo

<div class="col-lg-8 offset-lg-1 col-md-9 col-6 v_middle">
    <!--用户区域-->
    <div class="author-area">
        <!--注册页面-->
        <a href="/Register/Create" class="author-area__seller-btn inline">加入我们</a>

        <!---提示-->
        <div class="author__notification_area">
            <ul>
                <li class="has_dropdown">
                    <div class="icon_wrap">
                        <!--通知图标-->
                        <span class="lnr lnr-alarm"></span>
                        <!--未读通知数-->
                        <span class="notification_count noti">@Model.noticeTongZhis.Where(n => n.isRead == false).Count()</span>
                    </div>

                    <div class="dropdowns notification--dropdown">
                        <!--表头-->
                        <div class="dropdown_module_header">
                            <h4>通知</h4>
                            <!--所有通知-->
                            <a href="notification.html">查看所有</a>
                        </div>

                        <!--具体通知缩略信息-->
                        <div class="notifications_module">
                            <!--通知-->
                            @foreach (var logT in Model.noticeTongZhis)
                            {
                                <!--通知一-->
                                <div class="notification">
                                    <div class="notification__info">
                                        <!--用户头像-->
                                        <div class="info_avatar">
                                            <img src=@logT.BasicUserInfo.HeadImg alt="">
                                        </div>
                                        <!--缩略信息-->
                                        <div class="info">
                                            <p>
                                                <span>@logT.BasicUserInfo.UserName</span> @logT.Action
                                                <!--物品详情信息-->
                                                <a href=@logT.Treasure.Link>@logT.Treasure.TreasureName</a>
                                            </p>
                                            <!--时间-->
                                            <p class="time">@logT.Time</p>
                                        </div>
                                    </div>
                                    <!--通知类型样式图标-->
                                    <div class="notification__icons ">
                                        <span class="lnr lnr-heart loved noti_icon"></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </li>

                <!--消息-->
                <li class="has_dropdown">
                    <div class="icon_wrap">
                        <!--消息图标-->
                        <span class="lnr lnr-envelope"></span>
                        <!--消息数-->
                        <span class="notification_count msg">@Model.noticeLiuYans.Where(n => n.isRead == false).Count()</span>
                    </div>

                    <!--表头-->
                    <div class="dropdowns messaging--dropdown">
                        <div class="dropdown_module_header">
                            <h4>留言</h4>
                            <a href="message.html">查看所有</a>
                        </div>

                        <!--消息一-->
                        <div class="messages">
                            @foreach (var logL in Model.noticeLiuYans)
                            {
                                <a href="message.html" class="message recent">
                                    <div class="message__actions_avatar">
                                        <div class="avatar">
                                            <img src=@logL.BasicUserInfo.HeadImg alt="">
                                        </div>
                                    </div>

                                    <div class="message_data">
                                        <div class="name_time">
                                            <div class="name">
                                                <p>@logL.BasicUserInfo.UserName</p>
                                                <span class="lnr lnr-envelope"></span>
                                            </div>

                                            <span class="time">@logL.Time</span>
                                            <p>@logL.Content</p>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <!--用户信息-->
        <div class="author-author__info inline has_dropdown">
            <!--头像-->
            <div class="author__avatar">
                <img src=@Model.BasicUserInfo.HeadImg alt="user avatar">
            </div>

            <!--昵称-->
            <div class="autor__info">
                <p class="name">
                    @Model.BasicUserInfo.RealName
                </p>
                <!--金额-->
                <p class="ammount">$20.45</p>
            </div>

            <!--个人页扩展-->
            <div class="dropdowns dropdown--author">
                <ul>
                    <!--个人信息-->
                    <li>
                        <a href="author.html">
                            <span class="lnr lnr-user"></span>个人信息
                        </a>
                    </li>
                    <li>
                        <a href="dashboard.html">
                            <span class="lnr lnr-home"></span> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-setting.html">
                            <span class="lnr lnr-cog"></span> 设置
                        </a>
                    </li>
                    <li>
                        <a href="cart.html">
                            <span class="lnr lnr-cart"></span>Purchases
                        </a>
                    </li>
                    <li>
                        <a href="favourites.html">
                            <span class="lnr lnr-heart"></span> Favourite
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-add-credit.html">
                            <span class="lnr lnr-dice"></span>Add Credits
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-statement.html">
                            <span class="lnr lnr-chart-bars"></span>Sale Statement
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-upload.html">
                            <span class="lnr lnr-upload"></span>Upload Item
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-manage-item.html">
                            <span class="lnr lnr-book"></span>Manage Item
                        </a>
                    </li>
                    <li>
                        <a href="dashboard-withdrawal.html">
                            <span class="lnr lnr-briefcase"></span>Withdrawals
                        </a>
                    </li>
                    <li>
                        <a href="/IAccount/SignOut">
                            <span class="lnr lnr-exit"></span>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>
